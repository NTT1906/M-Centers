        <Border x:Name="opts" Margin="10,0,10,59.121" MaxHeight="127.547" Height="127.184" VerticalAlignment="Bottom" BorderBrush="Black" BorderThickness="1">
            <Border.Background>
                <SolidColorBrush Color="White" Opacity="0.6"/>
            </Border.Background>

            <Grid>
                <RadioButton x:Name="opt1" Content="Restore only Modded files" Height="27.229" Margin="10,10,592.592,0" VerticalAlignment="Top" MaxHeight="27.229" FontSize="20" FontWeight="Bold"/>
                <RadioButton x:Name="opt2" Content="Restore All files" Height="27.229" Margin="10,85.955,592.592,0" VerticalAlignment="Top" MaxHeight="27.229" FontSize="20" FontWeight="Bold"/>
            </Grid>
        </Border>

    </Grid>
</Page>
