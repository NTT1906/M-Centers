      xmlns:local="clr-namespace:M_Centres_2._0"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="report">

    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="#FF007ACC" Opacity="0.9"/>
        </Grid.Background>
        <Grid.RowDefinitions>

        </Grid.RowDefinitions>
        <RichTextBox x:Name="log_box" Foreground="Black" BorderBrush="Black" SelectionBrush="#FF4C5513"  Margin="10,10,10,257.443" MinHeight="182.557" HorizontalAlignment="Left" VerticalContentAlignment="Bottom" IsReadOnly="True" TextChanged="log_box_TextChanged" VerticalScrollBarVisibility="Auto">
            <RichTextBox.Background>
                <SolidColorBrush Color="White" Opacity="0.7"/>
            </RichTextBox.Background>
            <FlowDocument/>
        </RichTextBox>
        <Button x:Name="oper" Content="Start Operation" Margin="261.457,0,265.221,10" MaxHeight="69.464" MinWidth="273.322" VerticalAlignment="Bottom" Height="44.121" MaxWidth="273.322" Click="Button_Click_1"/>
